<Page x:Class="Himical.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Himical"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBlock Text="Вход" Margin="0 20 0 0" Foreground="White" 
                       FontFamily="Cascadia Mono SemiBold"
                       HorizontalAlignment="Center"
                       FontSize="50"/>

        <StackPanel Width="300"
                    VerticalAlignment="Center">
            <TextBlock Text="Имя пользователя" Foreground="White" 
                       FontFamily="Cascadia Mono SemiBold" 
                       FontSize="25" />
            <TextBox Width="auto" Foreground="White" FontSize="20"  x:Name="UserNameTextBox"/>


            <TextBlock Text="Пароль" Margin="0 25 0 0" Foreground="White" 
                       FontFamily="Cascadia Mono SemiBold" 
                       FontSize="25" />
            <TextBox Width="auto" Foreground="White" FontSize="20"  x:Name="PasswordTextBox"/>

            <Button Content="Вход" Width="Auto" Height="50" Margin="0 25 0 0" FontSize="25" x:Name="Btn_Login" Click="Btn_Login_Click"/>
        </StackPanel>
    </Grid>
</Page>
